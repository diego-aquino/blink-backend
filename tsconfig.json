{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,

    "lib": ["esnext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@@/package.json": ["package.json"]
    }
  },

  "include": ["./**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
